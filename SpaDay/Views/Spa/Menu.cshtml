<h1>Fancy Spa</h1>
<div id="clientProfile">
    <h3>Client profile</h3>
    <p>@ViewBag.clientName</p>
</div>
<div id="servicesMenu">

    <h5>Facial Treatments</h5>
    <!--<p>Your //TODO: pass the skintype value in here// skin type is best suited to the follow facial types:</p>-->
    <p>@ViewBag.clientSkinType</p>
    
    <ul>
        <!--//TODO: iterate through appropriate facial treatments-->
        
           @foreach (string treatment in ViewBag.clientAppropriateFacials)
           {
              <li>@treatment</li>
           }
        
    </ul>

    <h5>Nail Services</h5>
    <!--// TODO: display a description for the nail service selected-->
    @if (ViewBag.clientManipedi == "manicure")
    {
        <p>@ViewBag.manicureMessage</p>
    }
    @if (ViewBag.clientManipedi == "pedicure")
    {
        <p>@ViewBag.pedicureMessage</p>
    }
    
    
</div>
